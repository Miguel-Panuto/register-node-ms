{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist/src",
    "rootDir": "./src",
    "strict": true,
    "allowJs": true,
    "types": [
      "reflect-metadata",
      "node",
      "mocha",
      "chai"
    ],
    "lib": [
      "ES2021",
      "DOM"
    ],
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
