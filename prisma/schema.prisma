generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Registry {
  id      Int      @id @default(autoincrement())
  type    String
  cnpj    String?
  cpf     String?
  Address Address?
  Contact Contact?
  uuid    String   @unique
}

model Contact {
  id         Int      @id @default(autoincrement())
  cellphone  String
  telephone  String
  email      String
  registryId Int      @unique
  registry   Registry @relation(fields: [registryId], references: [id])
}

model Address {
  id           Int      @id @default(autoincrement())
  street       String
  number       String
  complement   String?
  city         String
  state        String
  neighborhood String
  zipCode      String
  registryId   Int      @unique
  registry     Registry @relation(fields: [registryId], references: [id])
}
